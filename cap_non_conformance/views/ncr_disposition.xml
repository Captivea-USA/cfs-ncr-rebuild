<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="ncr_disposition_tree_view" model="ir.ui.view">
      <field name="name">ncr.disposition.tree.view</field>
      <field name="type">tree</field>
      <field name="model">ncr.disposition</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="cfs_description"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="ncr_disposition_form_view" model="ir.ui.view">
      <field name="name">ncr.disposition.form.view</field>
      <field name="type">form</field>
      <field name="model">ncr.disposition</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="cfs_description"/>
              </group>
              <group>
                
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search -->
    <record id="ncr_disposition_search" model="ir.ui.view">
        <field name="name">ncr.disposition.search</field>
        <field name="model">ncr.disposition</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>


