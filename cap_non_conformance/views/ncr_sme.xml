<odoo>

    <!-- List View -->
    <record id="ncr_sme_tree_view" model="ir.ui.view">
      <field name="name">ncr.sme.tree.view</field>
      <field name="type">tree</field>
      <field name="model">ncr.sme</field>
      <field name="arch" type="xml">
        <tree>
          <field name="cfs_user_id"/>
          <field name="cfs_notes"/>
          <field name="cfs_attachment"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="ncr_sme_form_view" model="ir.ui.view">
      <field name="name">ncr.sme.form.view</field>
      <field name="type">form</field>
      <field name="model">ncr.sme</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="cfs_user_id"/>
                <field name="cfs_notes"/>
                <field name="cfs_attachment"/>
              </group>
              <group>
                
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search -->
    <record id="ncr_sme_search" model="ir.ui.view">
        <field name="name">ncr.sme.search</field>
        <field name="model">ncr.sme</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>


