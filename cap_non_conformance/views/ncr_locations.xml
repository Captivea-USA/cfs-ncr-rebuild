<odoo>

    <!-- List View -->
    <record id="ncr_location_tree_view" model="ir.ui.view">
      <field name="name">ncr.location.tree.view</field>
      <field name="type">tree</field>
      <field name="model">ncr.location</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="ncr_location_form_view" model="ir.ui.view">
      <field name="name">ncr.location.form.view</field>
      <field name="type">form</field>
      <field name="model">ncr.location</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
              </group>
              <group>
                
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search -->
    <record id="ncr_location_search" model="ir.ui.view">
        <field name="name">ncr.location.search</field>
        <field name="model">ncr.location</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>


